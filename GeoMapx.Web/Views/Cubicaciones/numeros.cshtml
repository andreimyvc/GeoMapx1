@{
    ViewBag.Title = "Actividades diarias";
    //Layout = "~/Views/Shared/_MetronicWtableLayout.cshtml";
    //Layout = "~/Views/Shared/_MetronicLayout.cshtml";
}

<link href="~/Content/mapas.css" rel="stylesheet" />
<link href="~/Content/home.css" rel="stylesheet" />
@section scripts {  
<link href="~/Content/jquery-ui.1.8.16.css" rel="stylesheet" />
<link href="~/Content/ui.jqgrid.4.3.0.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.8.16.min.js"></script>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/grid.locale-es-4.3.0.js"></script>
<script src="~/Scripts/jquery.jqGrid.src-4.3.0.js"></script>
<script src="../assets/global/plugins/angularjs/angular.min.js" type="text/javascript"></script>


<script src="~/Js/jqgrid/jqgridNCubicacionesConfig.js"></script>
<script src="~/Angular/Services/GeoMapxWebApi.js"></script>
<script src="~/Js/helpers/actividadesprebuild.js"></script>
<script src="~/Angular/controllers/cubicacionesApp.js"></script>
<script>
    function initialize() {
        angular.element(document.getElementById('cubicacionesApp')).scope().startApp();
        initGridNCubicaciones();
    }
    function xChanState(id,est) {
        angular.element(document.getElementById('cubicacionesApp')).scope().xChanState(id, est);
    }
</script>

}
<div id="cubicacionesApp" data-ng-app="cubicacionesApp" data-ng-controller="cubicacionesController">
    <div class="page-content-inner">
        <div class="row">
            <div class="col-md-12 heigth380">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>GENERADOR DE NÚMERO DE CUBICACIÓN           
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="fullscreen" data-original-title="" title=""></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label class="control-label">Proyecto</label>
                                <div>
                                    <select class="form-control"
                                        data-ng-model="selectedProyect"
                                        data-ng-options="proyecto.CodigoProyecto for proyecto in proyectosData"
                                        data-ng-change="onProyectChange(selectedProyect)">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label">&nbsp;</label>
                                <div>
                                    <div class="actions">
                                        <a data-ng-click="newNCubicacion()" data-ng-show="control.btns.Nuevo.show" class="btn default btn-md">
                                            <i class="fa fa-plus"></i>&nbsp; Nuevo
                                </a>
                                        <a data-ng-click="cancelEntrada()" data-ng-show="control.btns.Cancelar.show" class="btn default btn-sm">
                                            <i class="fa fa-undo"></i>&nbsp; Cancelar
                            </a>
                                        <a data-ng-show="control.btns.Guardar.show" data-ng-click="generarNCubicacion()" class="btn blue btn-sm">
                                            <i class="fa fa-save"></i>&nbsp; GENERAR NÚMERO DE CUBICACIÓN
                            </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="jqGridNCubicaciones" class="heigth380"></table>
                            <div id="jqGridNCubicacionesoPager"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
